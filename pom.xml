<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>Navajo Embedded Assembly</name>
    <groupId>com.dexels.navajo</groupId>
    <artifactId>com.dexels.navajo.embedded.assembly</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <navajo.version>5.0.0</navajo.version>
    </properties>
    <modules>
        <module>dexels-felix-war</module>
        <module>dexels-felix-bridge</module>
    </modules>


    <profiles>
        <profile>
            <id>release</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>central</id>
                    <name>Dexels Central</name>
                    <url>http://repo.dexels.com/repository/public/</url>
                    <layout>default</layout>
                </repository>
                <repository>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>repo_thirdparty</id>
                    <name>Dexels Third</name>
                    <url>http://repo.dexels.com/repository/thirdparty/</url>
                    <layout>default</layout>
                </repository>
                <repository>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>maven_central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2/</url>
                    <layout>default</layout>
                </repository>
            </repositories>
            <distributionManagement>
                <repository>
                    <uniqueVersion>false</uniqueVersion>
                    <id>dexels</id>
                    <name>Dexels Repository</name>
                    <!-- <url>scp://navajo@spiritus.dexels.nl:/var/www/html/maven_release/</url> -->
                    <url>http://repo.dexels.com/nexus/content/repositories/navajo/</url>
                    <layout>default</layout>
                </repository>
                <snapshotRepository>
                    <uniqueVersion>true</uniqueVersion>
                    <id>dexels_snap</id>
                    <name>Dexels Snapshots</name>
                    <url>http://repo.dexels.com/nexus/content/repositories/navajo_snapshot</url>
                    <layout>default</layout>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>
    <organization>
        <name>Dexels</name>
        <url>http://www.dexels.com</url>
    </organization>
    <scm>
        <url>https://github.com/Dexels/navajo/</url>
    </scm>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/Dexels/navajo/issues</url>
    </issueManagement>
    <ciManagement>
        <system>jenkins</system>
        <url>https://repo.dexels.com/jenkins/</url>
    </ciManagement>
</project>
